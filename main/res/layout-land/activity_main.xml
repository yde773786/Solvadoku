<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".UI.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colortoolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/raleway"
                android:text="@string/title"
                android:textColor="@color/colorWhite"
                android:textSize="48sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/about_button"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_about"
                android:contentDescription="@string/contentDescriptionAboutButton"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_about"
                app:tint="@color/about_button_foreground" />

            <ImageButton
                android:id="@+id/pencil_marks_button"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_pencil_marks_enabled_landscape"
                android:contentDescription="@string/contentDescriptionPencilMarksButton"
                android:padding="11dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/about_button"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_pencil_for_landscape" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <com.yde.solvadoku.UI.Grids.SudokuGrid
        android:id="@+id/sudoku_board"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="48dp"
        android:focusableInTouchMode="true"
        android:padding="20dp"
        android:scaleType="centerCrop"
        app:columnCount="9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toStartOf="@id/buttons_vertical_guideline_1"
        app:rowCount="9" />


    <LinearLayout
        android:id="@+id/solve_button_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        app:layout_constraintDimensionRatio="3:2"
        app:layout_constraintTop_toBottomOf="@id/buttons_horizontal_guideline_1"
        app:layout_constraintBottom_toTopOf="@id/buttons_horizontal_guideline_2"
        app:layout_constraintStart_toEndOf="@id/buttons_vertical_guideline_1"
        app:layout_constraintEnd_toStartOf="@id/buttons_vertical_guideline_2" >

        <Button
            android:id="@+id/solve"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:background="@drawable/core_enabled"
            android:fontFamily="@font/raleway"
            android:text="@string/solve"
            android:textColor="@color/colorWhite"
            android:textSize="40sp" />

        <ImageButton
            android:id="@+id/choose_strategies"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/assist_enabled"
            android:contentDescription="@string/contentDescriptionChooseStrategiesButton"
            android:cropToPadding="true"
            android:padding="21dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_dropdown_arrow_icon" />
    </LinearLayout>

    <Button
        android:id="@+id/check_steps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        android:background="@drawable/secondary_enabled"
        android:fontFamily="@font/raleway"
        android:text="@string/steps"
        android:textColor="@color/colorWhite"
        android:textSize="40sp"
        app:layout_constraintDimensionRatio="3:2"
        app:layout_constraintTop_toBottomOf="@id/buttons_horizontal_guideline_1"
        app:layout_constraintBottom_toTopOf="@id/buttons_horizontal_guideline_2"
        app:layout_constraintEnd_toStartOf="@id/buttons_vertical_guideline_4"
        app:layout_constraintStart_toEndOf="@id/buttons_vertical_guideline_2"/>


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/number_pad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:layout_marginEnd="35dp"
        app:columnCount="3"
        app:layout_constraintBottom_toTopOf="@+id/buttons_horizontal_guideline_3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/buttons_vertical_guideline_3"
        app:layout_constraintTop_toBottomOf="@id/buttons_horizontal_guideline_2"
        app:rowCount="3">

        <Button
            android:id="@+id/one"
            style="@style/number_keys_landscape"
            android:text="@string/_1"
            app:layout_column="0"
            app:layout_columnWeight="0.33"
            app:layout_row="0"
            app:layout_rowWeight="0.33" />

        <Button
            android:id="@+id/two"
            style="@style/number_keys_landscape"
            android:text="@string/_2"
            app:layout_column="1"
            app:layout_columnWeight="0.33"
            app:layout_row="0"
            app:layout_rowWeight="0.33" />

        <Button
            android:id="@+id/three"
            style="@style/number_keys_landscape"
            android:text="@string/_3"
            app:layout_column="2"
            app:layout_columnWeight="0.33"
            app:layout_row="0"
            app:layout_rowWeight="0.33" />

        <Button
            android:id="@+id/four"
            style="@style/number_keys_landscape"
            android:text="@string/_4"
            app:layout_column="0"
            app:layout_columnWeight="0.33"
            app:layout_row="1"
            app:layout_rowWeight="0.33" />

        <Button
            android:id="@+id/five"
            style="@style/number_keys_landscape"
            android:text="@string/_5"
            app:layout_column="1"
            app:layout_columnWeight="0.33"
            app:layout_row="1"
            app:layout_rowWeight="0.33" />

        <Button
            android:id="@+id/six"
            style="@style/number_keys_landscape"
            android:text="@string/_6"
            app:layout_column="2"
            app:layout_columnWeight="0.33"
            app:layout_row="1"
            app:layout_rowWeight="0.33" />

        <Button
            android:id="@+id/seven"
            style="@style/number_keys_landscape"
            android:text="@string/_7"
            app:layout_column="0"
            app:layout_columnWeight="0.33"
            app:layout_row="2"
            app:layout_rowWeight="0.33" />

        <Button
            android:id="@+id/eight"
            style="@style/number_keys_landscape"
            android:text="@string/_8"
            app:layout_column="1"
            app:layout_columnWeight="0.33"
            app:layout_row="2"
            app:layout_rowWeight="0.33" />

        <Button
            android:id="@+id/nine"
            style="@style/number_keys_landscape"
            android:text="@string/_9"
            app:layout_column="2"
            app:layout_columnWeight="0.33"
            app:layout_row="2"
            app:layout_rowWeight="0.33" />

    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:id="@+id/function_keypad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toTopOf="@+id/buttons_horizontal_guideline_3"
        app:layout_constraintDimensionRatio="1:3"
        app:layout_constraintStart_toEndOf="@+id/buttons_vertical_guideline_3"
        app:layout_constraintTop_toBottomOf="@id/buttons_horizontal_guideline_2">

        <ImageButton
            android:id="@+id/clear_board"
            android:background="@drawable/button_clear_board"
            android:contentDescription="@string/contentDescriptionClearBoardButton"
            android:src="@drawable/ic_trash_icon"
            style="@style/function_keys_landscape"/>

        <ImageButton
            android:id="@+id/erase"
            android:background="@drawable/button_function_key"
            android:contentDescription="@string/contentDescriptionEraseButton"
            android:src="@drawable/ic_erase"
            style="@style/function_keys_landscape"/>

        <ImageButton
            android:id="@+id/next_cell"
            android:background="@drawable/button_function_key"
            android:contentDescription="@string/contentDescriptionNextCellButton"
            android:src="@drawable/ic_next"
            style="@style/function_keys_landscape"/>

    </LinearLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttons_horizontal_guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttons_horizontal_guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttons_horizontal_guideline_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.87" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttons_vertical_guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttons_vertical_guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttons_vertical_guideline_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.81" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttons_vertical_guideline_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.95" />


</androidx.constraintlayout.widget.ConstraintLayout>

