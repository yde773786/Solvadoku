<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:checkedTextViewStyle">@style/CheckedTextStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="AppTheme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="CheckedTextStyle" parent="android:Widget.Holo.CheckedTextView">
        <item name="android:fontFamily">@font/ralewaymed</item>
    </style>

    <style name="PositiveButtonStyle" parent="android:Widget.Material.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/ralewaymed</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.Holo.TextView">
        <item name="android:fontFamily">@font/ralewaymed</item>
    </style>

    <style name="disabled_darken">
        <item name="android:textColor">@drawable/text_color</item>
    </style>

    <style name="number_keys_portrait" parent="android:Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@drawable/button_number_key</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/majormono"</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="function_keys_portrait" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">25dp</item>
    </style>

    <style name="number_keys_landscape" parent="android:Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@drawable/button_number_key</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/majormono"</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="function_keys_landscape" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">25dp</item>
    </style>


</resources>
