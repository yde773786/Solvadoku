<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkGrey</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:checkedTextViewStyle">@style/CheckedTextStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="AppTheme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="CheckedTextStyle" parent="android:Widget.Holo.CheckedTextView">
        <item name="android:fontFamily">@font/ralewaymed</item>
    </style>

    <style name="PositiveButtonStyle" parent="android:Widget.Material.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/ralewaymed</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.Holo.TextView">
        <item name="android:fontFamily">@font/ralewaymed</item>
    </style>

    <style name="disabled_darken">
        <item name="android:textColor">@drawable/text_color</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colortoolbar</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppTheme</item>
    </style>

    <style name="toolbar_title" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textSize">27.5sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:text">@string/title</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="number_key" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button_number_key</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@fonts/majormono</item>
        <item name="fontFamily">@font/majormono</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">25sp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="function_key" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
